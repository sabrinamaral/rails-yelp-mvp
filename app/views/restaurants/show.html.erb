<div class='container my-4'>
  <div class='row justify-content-center'>
    <div class='col-7'>
      <h1 class='text-center mb-4 text-secondary'><%= @restaurant.name %> Restaurant 🍝</h1>
        <div class="card-product mb-3 rounded" style='background: #dad7cd'>
          <div class="card-product-infos ms-5">
            <h2 class='mb-2'><i class="fa-solid fa-location-dot me-3"></i> <%= @restaurant.address.upcase %></h2>
            <h2 class='mb-2'><i class="fa-solid fa-phone me-3"></i> <%= @restaurant.phone_number %></h2>
            <h2 class='mb-2'><i class="fa-solid fa-utensils me-3"></i> <%= @restaurant.category.upcase %></h2>
          </div>
        </div>
          <% @restaurant.reviews.each do |review| %>
          <div class="card-product mb-3 rounded" style='background: #edede9'>
            <div class="card-product-infos ms-5">
              <p class='fs-5 mb-2'><%= "⭐️" * review.rating %></p>
              <p class='mb-2 fs-6'><%= review.content %></p>
            </div>
          </div>
        <% end %>
        <%= render 'reviews/form', restaurant: @restaurant, review: @review %>
    </div>
  </div>
</div>
